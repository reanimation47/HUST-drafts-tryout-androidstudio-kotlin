<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/student_list_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/student_list_item_image"
        app:layout_constraintTop_toTopOf="@+id/student_list_item_image" />

    <TextView
        android:id="@+id/item_student_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/student_list_item_image"
        app:layout_constraintTop_toBottomOf="@+id/item_student_name" />

    <CheckBox
        android:id="@+id/student_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toBottomOf="@+id/item_student_code"
        app:layout_constraintStart_toEndOf="@+id/item_student_code" />
</androidx.constraintlayout.widget.ConstraintLayout>